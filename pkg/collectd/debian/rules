#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- --with-perl-bindings="INSTALLDIRS=vendor"

override_dh_shlibdeps:
	# generate pkg deps without looking at plugins
	dh_shlibdeps -X /usr/lib/collectd/
	# and put plugin shlib deps in "shlibs:Suggests" so they can go in
	# "Suggests" rather than "Depends" in the control file
	dpkg-shlibdeps -dSuggests debian/collectd/usr/lib/collectd/*.so -O >> debian/collectd.substvars
